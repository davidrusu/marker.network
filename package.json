{
  "name": "marker.network",
  "version": "1.2.0",
  "description": "A static site generator for the reMarkable Tablet",
  "main": "dist/main.js",
  "scripts": {
    "build": "sh build.sh && tsc",
    "watch": "tsc -w",
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "start": "npm run build && electron ./dist/main.js",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "release": "npm run build && electron-builder --publish always"
  },
  "repository": "https://github.com/electron/electron-quick-start-typescript",
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial",
    "demo",
    "typescript"
  ],
  "author": "David Rusu",
  "license": "GPL-3.0",
  "devDependencies": {
    "@types/auth0": "^2.33.3",
    "@types/http-server": "0.10.1",
    "@types/jquery": "^3.5.5",
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/parser": "^3.4.0",
    "electron": "12.0.1",
    "electron-builder": "^22.10.5",
    "electron-notarize": "^1.0.0",
    "eslint": "^7.3.1",
    "typescript": "^4.2"
  },
  "dependencies": {
    "auth0": "^2.34.2",
    "axios": "^0.21.1",
    "electron-log": "^4.2.4",
    "electron-updater": "^4.3.9",
    "form-data": "^4.0.0",
    "http-server": "0.12.3",
    "jquery": "^3.6.0",
    "jszip": "^3.2.0",
    "remarkable-typescript": "git://github.com/lapwat/reMarkable-typescript#8bbdd9fc63bc81e6b726431e6fe265691b6bda28"
  },
  "build": {
    "files": [
      "dist/**/*",
      "assets/**/*",
      "*.html",
      "*.css"
    ],
    "asarUnpack": [
      "dist/marker_network_site_generator*",
      "dist/themes/**/*",
      "dist/starter/**/*"
    ],
    "appId": "network.marker.Designer",
    "afterSign": "./afterSignHook.js",
    "mac": {
      "hardenedRuntime": true
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    },
    "publish": {
      "provider": "github",
      "repo": "marker.network",
      "owner": "davidrusu"
    }
  }
}
